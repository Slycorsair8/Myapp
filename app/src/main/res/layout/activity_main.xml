<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00B3B3"
    tools:context=".MainActivity">

            <EditText
                android:id="@+id/emailinput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email Address"
                android:layout_marginTop="270dp"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/textdisp"
                />

            <EditText
                android:id="@+id/passinput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/emailinput"
                android:background="@drawable/textdisp"
                android:hint="Password"
                android:padding="10dp"
                android:inputType="textPassword"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"/>


            <Button
                android:id="@+id/loinbutton"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="100dp"
                android:layout_below="@+id/passinput"
                android:textColor="#FFFFFF"
                android:layout_marginRight="100dp"
                android:background="@drawable/butndisp"
                android:text="login"
                android:textSize="12sp"

                android:layout_marginTop="10dp"
                />

            <Button
                android:id="@+id/createbutton"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/loinbutton"
                android:textSize="12sp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="5dp"

                android:layout_marginRight="100dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/butndisp2"
                android:text="create new account" />

</RelativeLayout>